<Window x:Class="ThreadedPrime.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid x:Name="PrimeGrid" Margin="10,0,10,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230" />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="97*"/>
            <RowDefinition Height="Auto" MinHeight="33"/>
            <RowDefinition Height="180*" />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Button x:Name="PrimeButton" Grid.Column="0" Click="PrimeButton_Click" Margin="26,28,25,27">Generate Primes</Button>
        <Label Grid.Column="2">Last Prime</Label>
        <TextBox x:Name="PrimeBox" Grid.Column="2" Grid.Row="1"></TextBox>
        <Button x:Name="PrintButton" Content="Print" HorizontalAlignment="Left" Margin="26,48,0,0" Grid.Row="2" VerticalAlignment="Top" Width="179" Height="41" Click="PrintButton_Click"/>
    </Grid>
</Window>
